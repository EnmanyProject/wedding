# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/wedding_app

# Storage (MinIO/S3)
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin123
STORAGE_BUCKET=wedding-photos
STORAGE_REGION=us-east-1
STORAGE_FORCE_PATH_STYLE=true

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Server
PORT=3000
NODE_ENV=development

# Development/Seeding
DEV_MODE_SEED_ENABLED=true

# Quiz Configuration
QUIZ_ENTER_COST=1
QUIZ_WRONG_PENALTY=1
TRAIT_ADD_REWARD=1

# Affinity Thresholds
AFFINITY_ALPHA=3
AFFINITY_BETA=1
AFFINITY_T1_THRESHOLD=20
AFFINITY_T2_THRESHOLD=40
AFFINITY_T3_THRESHOLD=60

# Photo Configuration
PHOTO_THUMB_SIZE=256
PHOTO_BLUR1_SIGMA=4
PHOTO_BLUR2_SIGMA=8
PRESIGN_URL_EXPIRES=300

# Ranking
RANKING_TOP_COUNT=5
RANKING_CACHE_TTL=3600